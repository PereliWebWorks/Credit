			{% else %}
				{{ name|replace({"_": " "})|title }}
			{% endif %}
		</label>
		<input
			id="{{ name }}"
			name="{{ name }}"
			type="{{ type }}"
			class="form-control {% if required %}required{% endif %}"
			{% if required %}
				required="true"
			{% endif %}
		/>
	</div>
{% endmacro %}














