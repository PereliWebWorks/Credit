{% import "flash_messages.twig" as flasher %}
<html>
<head>
	{% block head %}
		<!-- jQuery -->
		<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
		<!-- jQuery UI -->
		<script src="https://code.jquery.com/ui/1.12.1/themes/dark-hive/jquery-ui.css"></script>
		<!-- Bootstrap -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<!-- Bootstrap theme -->
		<link rel="stylesheet" href="https://bootswatch.com/paper/bootstrap.min.css" type="text/css" />
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
		<!-- PWStrength -->
		<script src="library/pwstrength/pwstrength.min.js"></script>
		<!-- stripe -->
		<script src="https://js.stripe.com/v3/"></script>
		<!-- custom css -->
		<link rel="stylesheet" href="stylesheets/style.css" type="text/css" />
		<link rel="stylesheet" href="stylesheets/forms.css" type="text/css" />	
		<script>
			$(()=>{
				$("[title]").tooltip();
				var pwoptions = {
					ui: {
						progressBarEmptyPercentage: 10,
						progressBarMinPercentage: 10,
						showVerdictsInsideProgressBar: true,
						scores: [10, 20, 30, 40, 50]
					}
				}
				$(".pwstrength").pwstrength(pwoptions);
			});
		</script>
	{% endblock %}
</head>
<body>
	{% block header %}
		<nav class="navbar navbar-default">
		  <div class="container-fluid">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <a class="navbar-brand" href="/">Credit</a>
		    </div>
		    <div class="collapse navbar-collapse" id="navbar-collapse">
		      <ul class="nav navbar-nav">
		        {% if current_user %}
		        	<li><a href="letter_generator">Letter Generator</a></li>
		        {% else %}
			        <li><a href="signUp">Sign Up</a></li>
			        <li><a href="logIn">Log In</a></li>
			    {% endif %}
		      </ul>
			    {% if current_user %}
			      <ul class="nav navbar-nav navbar-right">
			        <li><a href="logOut">Log Out</a></li>
			      </ul>
			    {% endif %}  
		    </div><!-- /.navbar-collapse -->
		  </div><!-- /.container-fluid -->
		</nav>
	{% endblock %}
	<div id="content" class="container-fluid">
		{% block flasher %}
			{% if flash_messages %}
				<div class="row">
					<div class="col-md-6 col-md-offset-3 col-xs-12">
						{% for type, message in flash_messages %}
							{{ flasher.flash(type, message) }}
						{% endfor %}
					</div>
				</div>
			{% endif %}
		{% endblock %}
		{% block content %}
		{% endblock %}
	</div>
	{% block footer %}
		<div id="footer" class="row">
			<div class="col-xs-12 text-center">&copy;{{"now"|date("Y")}} All Rights Reserved, White Label Credit Repairs</div>
			<div class="col-xs-12 text-center">Website by <a href="pereliwebworks.com">Drew Pereli</a></div>
		</div>
	{% endblock %}
</body>
</html>