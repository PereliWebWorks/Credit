{% extends 'page.twig' %}
{% import 'form_fields.twig' as field %}
{% block content %}
	<form class="bs-form col-xs-12 col-md-6 col-md-offset-3" action="signUp.php" method="POST">
		{{ field.t({name:"first_name", value:post_data.first_name}) }}
		{{ field.t({name:"last_name", value:post_data.last_name}) }}
		{{ field.t({name:"email", type:"email", value:post_data.email}) }}
		{{ field.t({name:"password", type:"password"})}}
		{{ field.t({name:"password_confirmation", type:"password"}) }}
		{{ field.submit("Sign Up") }}
	</form>
{% endblock %}