{% macro text(name, required=true, type="text", label=false) %}
	<div class="form-group">
		<label for="{{ name }}">
			{% if label %}
				{{ label }}
			{% else %}
				{{ name|replace({"_": " "})|title }}
			{% endif %}
		</label>
		<input
			id="{{ name }}"
			name="{{ name }}"
			type="{{ type }}"
			class="form-control {% if required %}required{% endif %}"
			{% if required %}
				required="true"
			{% endif %}
		/>
	</div>
{% endmacro %}


{% macro select(name, required=true, values) %}
	<div class="form-group">
		<label for="{{ name }}">{{ name|replace({"_": " "})|title }}</label><br/>
		<select 
			id="{{ name }}" 
			name="{{ name }}" 
			class="form-control {% if required %}required{% endif %}"
			{% if required %}
				required="true"
			{% endif %}
		>
			{% for value in values %}
				<option value="{{ value }}">{{ value|replace({"_": " "})|title }}</div>
			{% endfor %}
		</select>
	</div>
{% endmacro %}


