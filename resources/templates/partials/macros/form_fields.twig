
{% macro text(p) %}
	<div class="form-group">
		<label for="{{ p.name }}">
			{{ p.label|default(p.name|replace({"_": " "})|title) }}
		</label>
		<input
			id="{{ p.name }}"
			name="{{ p.name }}"
			type="{{ p.type|default('text') }}"
			class="form-control {{p.required}} {{p.classes}}"
			value="{{ p.value|default('') }}"
			{% if p.required %}
				required="true"
			{% endif %}
			{% if p.title %}
				title="{{p.title}}"
			{% endif %}
		/>
	</div>
{% endmacro %}

{% macro password() %}
	{% import _self as field %}
	{{ field.text({name:"password", type:"password", classes:"pwstrength", 
		title:"Password must be at least 8 characters long, contain at least 1 lowercase letter, at least 1 uppercase letter, and at least 1 number."}) }}
{% endmacro %}

{% macro password_confirmation() %}
	{% import _self as field %}
	{{ field.text({name:"password_confirmation", type:"password", classes:"password_confirmation"}) }}
{% endmacro %}


{% macro select(name, required=true, values) %}
	<div class="form-group">
		<label for="{{ name }}">{{ name|replace({"_": " "})|title }}</label><br/>
		<select 
			id="{{ name }}" 
			name="{{ name }}" 
			class="form-control {% if required %}required{% endif %}"
			{% if required %}
				required="true"
			{% endif %}
		>
			{% for value in values %}
				<option value="{{ value }}">{{ value|replace({"_": " "})|title }}</div>
			{% endfor %}
		</select>
	</div>
{% endmacro %}


